{
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
    "overrides": [
      {
        "files": [".*", "*.json", "*.md", "*.toml", "*.yml"],
        "options": {
          "useTabs": false
        }
      },
      {
        "files": ["*.md", "*.mdx"],
        "options": {
          "printWidth": 80
        }
      },
      {
        "files": ["**/*.astro"],
        "options": {
          "parser": "astro"
        }
      }
    ]
  }