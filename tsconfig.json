{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*", ".eslintrc.cjs"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["./src/config/index.ts"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
    }
  }
}
