---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'blockquote'>

const { class: className, ...props } = Astro.props
---

<blockquote
  class:list={[
    'border-primary my-8 rounded-lg border-l-4 bg-neutral-200 p-6 dark:bg-neutral-700',
    className,
  ]}
  {...props}
>
  <p class="!my-0">
    <em>
      <slot />
    </em>
  </p>
</blockquote>
