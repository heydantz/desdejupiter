---
import { Icon } from 'astro-icon/components';
import ThemeToggle from './ThemeToggle.astro';
import { socialLinks, SITE_TITLE } from '@config';
---

<nav
  class="border-border bg-fill/80 fixed top-0 right-0 left-0 z-50 flex items-center justify-between border-b px-4 py-3 backdrop-blur-md md:hidden"
>
  <div class="flex items-center">
    <a href="/" class="text-primary text-lg font-bold">{SITE_TITLE}</a>
  </div>

  <div class="flex items-center space-x-3">
    {
      socialLinks.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-primary dark:hover:text-primary text-gray-600 transition-colors dark:text-gray-400"
          aria-label={link.platform}
        >
          <Icon name={link.icon} size={20} />
        </a>
      ))
    }
    <ThemeToggle />
  </div>
</nav>
