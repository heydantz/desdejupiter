---
interface Props {
  size?: number;
  class?: string;
}

const { size = 40, class: className = "" } = Astro.props;
---

<svg 
  xmlns="http://www.w3.org/2000/svg" 
  viewBox="0 0 100 100" 
  width={size} 
  height={size} 
  class={`inline-block ${className}`}
  aria-label="Jupiter Tech Logo"
>
  <defs>
    <!-- Simple jupiter fill -->
    <linearGradient id="jupiterBody" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="var(--jupiter-light, #fb923c)" />
      <stop offset="100%" stop-color="var(--jupiter-dark, #ea580c)" />
    </linearGradient>
    
    <!-- Single band gradient -->
    <linearGradient id="band" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="var(--band-color, #c2410c)" stop-opacity="0.1" />
      <stop offset="50%" stop-color="var(--band-color, #c2410c)" stop-opacity="0.5" />
      <stop offset="100%" stop-color="var(--band-color, #c2410c)" stop-opacity="0.1" />
    </linearGradient>
    
    <!-- Terminal spot - solid color instead of gradient -->
    <linearGradient id="terminalSpot" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="var(--spot-color, #b91c1c)" />
      <stop offset="100%" stop-color="var(--spot-color, #b91c1c)" />
    </linearGradient>
  </defs>
  
  <!-- Main Jupiter body - simplified -->
  <circle 
    cx="50" 
    cy="50" 
    r="45" 
    fill="url(#jupiterBody)" 
    class="transition-colors"
  />
  
  <!-- Single prominent band -->
  <path 
    d="M5,50 Q50,55 95,50" 
    stroke="url(#band)" 
    stroke-width="20" 
    fill="none"
    class="transition-colors"
  />
</svg>

<style>
  /* Simplified CSS variables */
  :root {
    --jupiter-light: #fb923c;
    --jupiter-dark: #ea580c;
    --band-color: #c2410c;
    --spot-color: #b91c1c;
  }

  :global(.dark) {
    --jupiter-light: #f97316;
    --jupiter-dark: #c2410c;
    --band-color: #9a3412;
    --spot-color: #991b1b;
  }
  
  /* Make logo more visible on mobile */
  @media (max-width: 640px) {
    svg {
      min-width: 40px;
      min-height: 40px;
    }
  }
</style>
