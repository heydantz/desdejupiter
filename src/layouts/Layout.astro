---
import { AstroFont } from 'astro-font';
import '../styles/global.css';
import DesktopNavbar from '../components/DesktopNavbar.astro';
import MobileTopNavbar from '../components/MobileTopNavbar.astro';
import MobileBottomNavbar from '../components/MobileBottomNavbar.astro';

interface Props {
  title?: string;
}

const { title = 'Desde JÃºpiter' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <AstroFont
      config={[
        {
          name: 'Rubik',
          display: 'swap',
          selector: '.font-rubik',
          fallback: 'sans-serif',
          preload: true,
          googleFontsURL:
            'https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap',
          src: [],
        },
        {
          name: 'Roboto Mono',
          display: 'swap',
          selector: '.font-roboto-mono',
          fallback: 'monospace',
          preload: true,
          googleFontsURL:
            'https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap',
          src: [],
        },
      ]}
    />
    <script is:inline>
      (function () {
        function getThemePreference() {
          if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
          }
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        const theme = getThemePreference();

        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }

        localStorage.setItem('theme', theme);
      })();
    </script>
  </head>
  <body
    class="bg-fill grid min-h-screen grid-cols-[1fr_minmax(auto,1200px)_1fr] grid-rows-[auto_1fr_auto] gap-y-4 pb-16 font-mono text-base transition-colors duration-300 md:pb-0"
  >
    <header class="col-span-full">
      <DesktopNavbar />
      <MobileTopNavbar />
      <MobileBottomNavbar />
    </header>
    <main class="col-start-2 col-end-3 mt-8 px-4 py-8 md:mt-0">
      <slot />
    </main>

    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
    </style>
  </body>
</html>
